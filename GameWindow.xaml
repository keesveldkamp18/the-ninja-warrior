<Window x:Class="project_arcade.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_arcade"
        mc:Ignorable="d"
        Title="GameWindow" SizeToContent="WidthAndHeight">
	<Canvas Name="gameCanvas" Focusable="False" Height="900" Width="1600">
		<Button Height="20" Width="50" Focusable="False" Click="ReturnToMenuBtn">Return</Button>
		<Rectangle Height="75" Width="650" Tag="Platform" Fill="LightGray" Canvas.Top="825" Canvas.Left="0"></Rectangle>
		<Rectangle Height="75" Width="650" Tag="Platform" Fill="LightGray" Canvas.Top="750" Canvas.Left="950"></Rectangle>
		<Rectangle x:Name="Player" Height="150" Width="75" Fill="CornflowerBlue" Canvas.Top="675" Canvas.Left="75"></Rectangle>
	</Canvas>
</Window>
